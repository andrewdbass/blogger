<h1>All Articles</h1>

<ul id= "articles">
	<% @articles.each do |article| %>
		<li>
			<%= link_to article.title, article, class: "article_title" %>
				<%= image_tag article.image.url(:thumb) if article.image.instance[:image_file_name]%>
		</li>
	<% end %>
	<%= link_to "New", new_article_path, class: "new_article"  if logged_in?%>
</ul>
<p style= "padding-top: 25px;">
	<%= link_to "Browse by Tags", tags_path %>
</p>
