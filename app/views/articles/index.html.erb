<h1>All Articles</h1>

<ul id= "articles">
	<% @articles.each do |article| %>
		<li>
			<%= link_to article.title, article, class: "article_title" %>
		</li>
	<% end %>
	<%= link_to "New", new_article_path, class: "new_article" %>
</ul>

<p style= "padding-top: 25px;">
	<%= link_to "Browse by Tags", tags_path %>
</p>
